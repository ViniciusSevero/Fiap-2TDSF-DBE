package br.com.fiap.bean;

import java.util.ArrayList;
import java.util.List;

import javax.faces.application.FacesMessage;
import javax.faces.bean.ManagedBean;
import javax.faces.context.FacesContext;

import br.com.fiap.repository.VeiculoRepository;
import br.com.fiap.to.VeiculoTO;

@ManagedBean
public class VeiculoBean {
	private VeiculoTO veiculo = new VeiculoTO();
	private List<VeiculoTO> veiculos = new ArrayList<VeiculoTO>();
	
	public void cadastrar(){
		VeiculoRepository rep = new VeiculoRepository();
		try {
			rep.cadastrar(veiculo);
		} catch (Exception e) {
			e.printStackTrace();
			FacesContext.getCurrentInstance().addMessage(null, new FacesMessage(e.getMessage()));  
		}
	}

	public VeiculoTO getVeiculo() {
		return veiculo;
	}

	public List<VeiculoTO> getVeiculos() {
		if(this.veiculos == null){
			VeiculoRepository rep = new VeiculoRepository();
